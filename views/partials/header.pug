.navbar.navbar-expand-lg.navbar-light.bg-light.fixed-top
  a.navbar-brand(href='/')
    i.fa.fa-cube
    | National Teams
  button.navbar-toggler(type='button', data-toggle='collapse', data-target='.navbar-toggler')
    span.navbar-toggler-icon

  .collapse.navbar-collapse
    ul.navbar-nav.mr-auto
      li.nav-item(class=(title === 'Leagues') ? 'active' : undefined)
        a.nav-link(href='/leagues') Leagues
      li.nav-item(class=(title === 'Teams') ? 'active' : undefined)
        a.nav-link(href='/teams') Teams
      //if user
      li.nav-item.dropdown(class=(title.indexOf('Add') >= 0 ? 'active' : undefined))
        a.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
          span Add
          i.caret
        div.dropdown-menu
          a.dropdown-item(href='/leagues/new') League
          .dropdown-divider
          a.dropdown-item(href='/teams/new') Team
          .dropdown-divider
          a.dropdown-item(href='/players/new') Player

    ul.nav.navbar-nav
      if !user
        li.nav-item(class=(title === 'Login') ? 'active' : undefined)
          a.nav-link(href='/login') Login
      else
        li.nav-item.dropdown(class=(title === 'Account Management') ? 'active' : undefined)
          a.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
            if user.profile.picture
              img.avatar.avatar-xs.mr-2(src=user.profile.picture)
            span= user.profile.name || user.email || user.id
            i.caret
          div.dropdown-menu
            a.dropdown-item(href='/account') My Account
            .dropdown-divider
            a.dropdown-item(href='/logout') Logout
